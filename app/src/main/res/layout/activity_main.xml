<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#483D8B"
    tools:context=".MainActivity" >
    <!-- Introductory text -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="115dp"
        android:layout_height="60px"
        android:background="#9400D3"
        android:text="Introductory text"
        android:textColor="#ffffff"
        android:textSize="48px"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_editor_absoluteX="48dp"
        app:layout_editor_absoluteY="50dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="53dp"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <!-- intra-object text -->
    <EditText
        android:id="@+id/editText"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:textColor="#ffffff"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintVertical_bias="0.2"
        />
    <!-- Button -->
    <Button
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="452dp"
        android:width="200dp"
        android:background="#8A2BE2"
        android:gravity="center"
        android:text="@string/sting"
        android:textSize="17dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
        <!-- first text -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#7B68EE"
        android:text="First text"
        android:textColor="#ffffff"
        android:textSize="48px"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_editor_absoluteX="48dp"
        app:layout_editor_absoluteY="50dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="53dp"
        />
        <!-- second text -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#9370DB"
        android:text="Second text"
        android:textColor="#ffffff"
        android:textSize="48px"
        android:gravity="right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_editor_absoluteX="48dp"
        app:layout_editor_absoluteY="50dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="53dp"
        />
        <!-- third text -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="300dp"
        android:layout_height="60px"
        android:background="#6A5ACD"
        android:text="Third text"
        android:textColor="#ffffff"
        android:textSize="48px"
        android:gravity="left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_editor_absoluteX="48dp"
        app:layout_editor_absoluteY="50dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="53dp"
        />

        <!-- Горизонтальная цепочка элементов (Horizontal chain of elements) (1.spread)-->


    <TextView
        android:id="@+id/textView8"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#AFEEEE"
        android:gravity="center"
        android:text="Horizontal chain of elements"
        android:textColor="@color/black"
        android:textSize="48px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.559"
        app:layout_editor_absoluteX="48dp"
        app:layout_editor_absoluteY="50dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="60px"
        android:layout_marginBottom="276dp"
        android:background="#E0FFFF"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="48px"
        app:layout_constraintLeft_toRightOf="@id/textView6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_editor_absoluteX="48dp"
        app:layout_editor_absoluteY="50dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="100dp"
        android:layout_height="60px"
        android:layout_marginBottom="276dp"
        android:background="#E0FFFF"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="48px"
        app:layout_constraintLeft_toRightOf="@id/textView5"
        app:layout_constraintRight_toLeftOf="@id/textView7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_editor_absoluteX="48dp"
        app:layout_editor_absoluteY="50dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="60px"
        android:layout_marginBottom="276dp"
        android:background="#E0FFFF"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="48px"
        app:layout_constraintLeft_toRightOf="@id/textView5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.852"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_editor_absoluteX="48dp"
        app:layout_editor_absoluteY="50dp"
        tools:ignore="MissingConstraints" />

    <!-- Горизонтальная цепочка элементов (Horizontal chain of elements) (2.spread_inside)-->

    <TextView
        android:id="@+id/textView9"
        android:layout_width="100dp"
        android:layout_height="60px"
        android:layout_marginBottom="240dp"
        android:background="#E0FFFF"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="48px"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@id/textView10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_editor_absoluteX="48dp"
        app:layout_editor_absoluteY="50dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="100dp"
        android:layout_height="60px"
        android:layout_marginBottom="240dp"
        android:background="#E0FFFF"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="48px"
        app:layout_constraintLeft_toRightOf="@id/textView9"
        app:layout_constraintRight_toLeftOf="@id/textView11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintVertical_bias="0.13"
        app:layout_editor_absoluteX="48dp"
        app:layout_editor_absoluteY="50dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="100dp"
        android:layout_height="60px"
        android:layout_marginBottom="240dp"
        android:background="#E0FFFF"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="48px"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@id/textView9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.852"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_editor_absoluteX="48dp"
        app:layout_editor_absoluteY="50dp"
        tools:ignore="MissingConstraints" />

    <!-- Горизонтальная цепочка элементов (Horizontal chain of elements) (3.packed)-->




</androidx.constraintlayout.widget.ConstraintLayout>